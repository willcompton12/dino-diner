<Page x:Class="PointOfSale.CustomizeWrap"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomizeWrap">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="180"></Setter>
                <Setter Property="Height" Value="100"></Setter>
            </Style>
        </Grid.Resources>
        <Button FontSize="13" Content="Hold Dressing" Click="OnHoldDressing"/>
        <Button FontSize="13" Content="Hold Lettuce" Click="OnHoldLettuce" Grid.Row="1" />
        <Button FontSize="13" Content="Hold Cheese" Click="OnHoldCheese" Grid.Row="2"/>
        <Button FontSize="13" Content="Done" Click="OnDone" Grid.Row="2" Grid.Column="2"/>



    </Grid>
</Page>
